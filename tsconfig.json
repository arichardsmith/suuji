{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": ["es2016"],
    "outDir": "dist",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": ["node_modules", "test", "dist", "module"]
}
